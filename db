CREATE DATABASE IF NOT EXISTS akinator_dc CHARACTER SET utf8mb4 COLLATE utf8mb4_general_ci;
USE akinator_dc;

-- TABLA DE PERSONAJES
CREATE TABLE personajes (
    id INT AUTO_INCREMENT PRIMARY KEY,
    nombre VARCHAR(100) NOT NULL,
    imagen_url VARCHAR(255),
    descripcion TEXT
);

-- TABLA DE PREGUNTAS
CREATE TABLE preguntas (
    id INT AUTO_INCREMENT PRIMARY KEY,
    texto VARCHAR(255) NOT NULL
);

-- TABLA INTERMEDIA DE RESPUESTAS
CREATE TABLE respuestas_personajes (
    id INT AUTO_INCREMENT PRIMARY KEY,
    personaje_id INT NOT NULL,
    pregunta_id INT NOT NULL,
    respuesta TINYINT(1) NOT NULL,
    FOREIGN KEY (personaje_id) REFERENCES personajes(id) ON DELETE CASCADE,
    FOREIGN KEY (pregunta_id) REFERENCES preguntas(id) ON DELETE CASCADE,
    UNIQUE KEY unique_respuesta (personaje_id, pregunta_id)
);

